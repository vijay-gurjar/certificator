




<style>

@import url('https://fonts.googleapis.com/css?family=Poppins:400,500,600,700&display=swap');
*{
  margin: 0;
  padding: 0;
  outline: none;
  box-sizing: border-box;
  font-family: 'Poppins', sans-serif;
}
body{


}
.container{
  max-width: 800px;
  width: auto;
  padding: 25px 40px 10px 40px;
  box-shadow: 0px 0px 10px rgba(0,0,0.1);
}
.container .text{
  text-align: center;
  font-size: 41px;
  font-weight: 600;
  font-family: 'Poppins', sans-serif;
  background: -webkit-linear-gradient(right, #F99234, #fff, #F99234, #fff);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}
.container form{
  padding: 30px 0 0 0;
}
.container form .form-row{
  display: flex;
  margin: 32px 0;
}
form .form-row .input-data{
  width: 100%;
  height: 40px;
  margin: 0 20px;
  position: relative;
  margin-top: 1rem
}
form .form-row .textarea{
  height: 70px;
}
.input-data input,
.textarea textarea{
  display: block;
  width: 100%;
  height: 100%;
  border: none;
  font-size: 17px;
  border-bottom: 2px solid rgba(0,0,0, 0.12);
  background: inherit;
}
.input-data input:focus ~ label, .textarea textarea:focus ~ label,
.input-data input:valid ~ label, .textarea textarea:valid ~ label{
  transform: translateY(-20px);
  font-size: 14px;
  color: #3498db;
}
.textarea textarea{
  resize: none;
  padding-top: 10px;
}
.input-data label{
  color: #E9EBE2;
  position: absolute;
  pointer-events: none;
  bottom: 10px;
  font-size: 16px;
  transition: all 0.3s ease;
}
.textarea label{
  width: 100%;
  bottom: 40px;
  background: #fff;
}
.input-data .underline{
  position: absolute;
  bottom: 0;
  height: 2px;
  width: 100%;
}
.input-data .underline:before{
  position: absolute;
  content: "";
  height: 2px;
  width: 100%;
  background: #3498db;
  transform: scaleX(0);
  transform-origin: center;
  transition: transform 0.3s ease;
}
.input-data input:focus ~ .underline:before,
.input-data input:valid ~ .underline:before,
.textarea textarea:focus ~ .underline:before,
.textarea textarea:valid ~ .underline:before{
  transform: scale(1);
}
.submit-btn .input-data{
  overflow: hidden;
  height: 45px!important;
  width: 25%!important;
}
.submit-btn .input-data .inner{
 height: 100%;
    width: 300%;
    opacity: 0.5;
    position: absolute;
    left: -100%;
    background: -webkit-linear-gradient(right, #ffffff, #F99234, #ffffff, #F99234);
    transition: all 0.4s;
}

.text-white {
    color: #ffffff
}

.submit-btn .input-data:hover .inner{
  left: 0;
}
.submit-btn .input-data input{
  background: none;
  border: none;
  color: #fff;
  font-size: 17px;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 1px;
  cursor: pointer;
  position: relative;
  z-index: 2;
}

.disabled-input {
    margin-top: -3.5rem !important;
    display: block !important;
    position: inherit !important;
}

@media (max-width: 700px) {
  .container .text{
    font-size: 30px;
  }
  .container form{
    padding: 10px 0 0 0;
  }
  .container form .form-row{
    display: block;
  }
  form .form-row .input-data{
    margin: 35px 0!important;
  }
  .submit-btn .input-data{
    width: 40%!important;
  }
}


.main-div {
    height: 100vh;
    background-image: url('https://storage.googleapis.com/vts-public/BjpPublicPhoto.png');
    background-repeat: no-repeat;

    background-size: cover;
    margin: auto;
}
</style>
<div class="main-div">
  <div class="container">
    <div class="text">
      Certificate Details
    </div>
    <%= form_with(model: @certificate, url: create_certificate_path, method: :post, class: "form-signin") do |f| %>
      <%= f.hidden_field :user_id, value: @user.id %>
      <%= f.hidden_field :date, value: Date.today %>
      <div class="form-row">
        <div class="input-data">
          <%= f.text_field :name,class: "text-white   ", required: true, disabled: @certificate.download_count ? @certificate.download_count <= ENV.fetch('CERTIFICATE_DOWNLOAD_COUNT').to_i : false %>
          <div class="underline"></div>
          <%= f.label :name, class: @certificate.name.present? ? "disabled-input" : ""%>
        </div>
        <div class="input-data">
          <%= f.text_field :address,class: "text-white", required: true, disabled: @certificate.download_count ? @certificate.download_count <= ENV.fetch('CERTIFICATE_DOWNLOAD_COUNT').to_i : false %>
          <div class="underline"></div>
          <%= f.label :address, class: @certificate.address.present? ? "disabled-input" : "" %>
        </div>
      </div>
      <div class="form-row">
        <div class="input-data">
          <%= f.text_field :zila,class: "text-white", required: true, disabled: @certificate.download_count ? @certificate.download_count <= ENV.fetch('CERTIFICATE_DOWNLOAD_COUNT').to_i : false %>
          <div class="underline"></div>
          <%= f.label :zila, class: @certificate.zila.present? ? "disabled-input" : "" %>
        </div>
        <div class="input-data">
          <%= f.text_field :lok_sabha,class: "text-white", required: true, disabled: @certificate.download_count ? @certificate.download_count <= ENV.fetch('CERTIFICATE_DOWNLOAD_COUNT').to_i : false %>
          <div class="underline"></div>
          <%= f.label :lok_sabha, class: @certificate.lok_sabha.present? ? "disabled-input" : "" %>
        </div>
        <div class="input-data">
          <%= f.text_field :state,class: "text-white", required: true, disabled: @certificate.download_count ? @certificate.download_count <= ENV.fetch('CERTIFICATE_DOWNLOAD_COUNT').to_i : false %>
          <div class="underline"></div>
          <%= f.label :state, class: @certificate.state.present? ? "disabled-input" : "" %>
        </div>
      </div>
      <div class="form-row">
        <div class="input-data textarea">
          <br />
          <div class="form-row submit-btn">
            <div class="input-data">
              <div class="inner"></div>
              <%= f.submit "Submit" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  </div>
</div>



